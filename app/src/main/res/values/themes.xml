<resources>
    <!-- Base application theme. -->
    <style name="Theme.Kite" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/bg_main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--
                <item name="android:windowTranslucentStatus">false</item>
        -->
        <item name="android:statusBarColor">@android:color/white</item>

        <!-- Customize your theme here. -->
    </style>

    // style for TextInputLayout

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextColor">@color/error_text</item>
        <item name="boxStrokeErrorColor">@color/error_text</item>
        <item name="boxStrokeColor">@color/box_stroke_color</item>
    </style>

    <style name="TextEditText" parent="ThemeOverlay.Material3.TextInputEditText">

        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_drawable</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:textColorHint">#2628282D</item>
        <item name="android:paddingBottom">@dimen/_6sdp</item>
        <item name="android:lines">1</item>
        <item name="fontFamily">@font/avenir_regular</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="hintTextColor">#2628282D</item>

    </style>

    //add card edit text style

    <style name="CardTextEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_drawable</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColorHint">#B328282D</item>
        <item name="android:lines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/avenir_black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="hintTextColor">#B328282D</item>

    </style>


    //style for material button

    <style name="CustomMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/bg_button</item>
        <item name="android:textColor">@color/btn_text</item>
        <item name="cornerRadius">@dimen/_50sdp</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="fontFamily">@font/avenir_heavy</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="BlackCustomMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/btn_text</item>
        <item name="cornerRadius">@dimen/_50sdp</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="fontFamily">@font/avenir_heavy</item>
        <item name="android:textAllCaps">false</item>
    </style>
    //style for small textview

    <style name="SmallCustomMaterialTextView" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/avenir_black</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">#FEFEFE</item>
    </style>

    //style for medium textview

    <style name="MediumCustomMaterialTextView" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/avenir_black</item>
        <item name="android:textSize">@dimen/_32sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BlackSmallCustomMaterialTextView" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/avenir_black</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    //style for medium textview

    <style name="BlackMediumCustomMaterialTextView" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/avenir_black</item>
        <item name="android:textSize">@dimen/_30sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CapitalTextView" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/avenir_light</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    //style for add card layout

    <style name="CardCapitalTextView" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/avenir_regular</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>


    //style for home page card view

    <style name="CustomCardViewHome" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="cornerRadius">@dimen/_500sdp</item>
        <item name="cardElevation">@dimen/_1sdp</item>
        <item name="background">@drawable/circle_white</item>
        <item name="android:padding">@dimen/_2sdp</item>
    </style>
    //white button style

    <style name="WhiteCustomMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">@dimen/_50sdp</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="fontFamily">@font/avenir_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    //style for drawer menu textview

    <style name="DrawerTextview" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/avenir_regular</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/menu_item</item>
    </style>
    //tab layout style

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="fontFamily">@font/avenir_black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>