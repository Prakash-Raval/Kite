<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#DCD9D9" />
            <size android:width="@dimen/_100sdp" android:height="@dimen/_100sdp" />
            <stroke android:width="1dp" android:color="#DCD9D9" />
            <size android:height="@dimen/_20sdp" android:width="@dimen/_100sdp"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
            <size android:width="@dimen/_100sdp" android:height="@dimen/_100sdp" />
            <stroke android:width="@dimen/_1sdp" android:color="#34c759" />
            <corners android:radius="@dimen/_20sdp"/>
            <size android:height="@dimen/_20sdp" android:width="@dimen/_100sdp"/>

        </shape>
    </item>
</selector>