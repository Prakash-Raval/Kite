<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="isSelected"
            type="Boolean" />

        <variable
            name="dataNotification"
            type="com.example.kite.notification.model.NotificationResponse.NotificationsData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:background="@color/card_view_background">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtNotificationHeader"
            style="@style/BlackSmallCustomMaterialTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@{dataNotification.notificationText}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Your ride is about to start" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtNotificationDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:fontFamily="@font/avenir_regular"
            android:text="@{dataNotification.description}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtNotificationHeader"
            app:lineHeight="@dimen/_16sdp"
            tools:text="Your ride is about to start Your ride is about to start Your ride is about to start Your ride is about to start Your ride is about to start " />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:alpha="0.3"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtNotificationDesc" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>