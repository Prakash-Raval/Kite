<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="updateTripData"
            type="com.example.kite.viewscheduletrip.model.ViewTripResponse" />

        <variable
            name="visible"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gray_rect">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgSTBack"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/ic_back_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgSTBack">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/glStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/_20sdp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/glEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/_20sdp" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtSTTRip"
                    style="@style/BlackMediumCustomMaterialTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/schedule_a_trip"
                    android:textSize="@dimen/_26sdp"
                    app:layout_constraintStart_toEndOf="@id/glStart"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtSTDatePickerText"
                    style="@style/BlackSmallCustomMaterialTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:text="@string/schedule_trip_text"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintEnd_toStartOf="@id/glEnd"
                    app:layout_constraintStart_toEndOf="@id/glStart"
                    app:layout_constraintTop_toBottomOf="@id/txtSTTRip"
                    app:lineHeight="@dimen/_20sdp" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardSTContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@android:color/transparent"
                    app:cardCornerRadius="@dimen/_20sdp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toStartOf="@id/glEnd"
                    app:layout_constraintStart_toEndOf="@id/glStart"
                    app:layout_constraintTop_toBottomOf="@id/txtSTDatePickerText"
                    app:strokeColor="@color/black"
                    app:strokeWidth="@dimen/_1sdp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gray_rect">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtSTVehicle"
                            style="@style/CapitalTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text="@string/vehicle"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtSTVehicleName"
                            style="@style/CapitalTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/txtSTVehicle"
                            app:layout_constraintStart_toStartOf="@id/txtSTVehicle"
                            app:layout_constraintTop_toBottomOf="@id/txtSTVehicle"
                            tools:text="@string/vehicle" />

                        <View
                            android:id="@+id/viewST1"
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:background="@color/black"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/txtSTDate"
                            app:layout_constraintStart_toEndOf="@id/txtSTVehicle"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtSTDate"
                            style="@style/CapitalTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text="@string/date"
                            app:layout_constraintEnd_toStartOf="@id/viewST2"
                            app:layout_constraintStart_toEndOf="@id/viewST1"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtSTDateSelect"
                            style="@style/CapitalTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:text="@{updateTripData.scheduleDate}"
                            android:visibility="@{visible ? View.VISIBLE : View.GONE}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/txtSTDate"
                            app:layout_constraintStart_toStartOf="@id/txtSTDate"
                            app:layout_constraintTop_toBottomOf="@id/txtSTDate"
                            tools:text="22/22/2222" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imgDownDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_arrow_down"
                            android:visibility="@{visible ? View.GONE : View.VISIBLE}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/txtSTDate"
                            app:layout_constraintStart_toStartOf="@id/txtSTDate"
                            app:layout_constraintTop_toBottomOf="@id/txtSTDate" />

                        <View
                            android:id="@+id/viewST2"
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:background="@color/black"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/txtSTTime"
                            app:layout_constraintStart_toEndOf="@id/txtSTDate"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtSTTime"
                            style="@style/CapitalTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:text="@string/time"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/viewST2"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtSTTimeSelected"
                            style="@style/CapitalTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:text="@{updateTripData.scheduleTime}"
                            android:visibility="@{visible ? View.VISIBLE : View.GONE}"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/txtSTTime"
                            app:layout_constraintStart_toStartOf="@id/txtSTTime"
                            app:layout_constraintTop_toBottomOf="@id/txtSTTime"
                            tools:text="11pm" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imgDownTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_arrow_down"
                            android:visibility="@{visible ? View.GONE : View.VISIBLE}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/txtSTTime"
                            app:layout_constraintStart_toStartOf="@id/txtSTTime"
                            app:layout_constraintTop_toBottomOf="@id/txtSTTime" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <FrameLayout
                    android:id="@+id/frameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:background="@drawable/bg_card_white_top_radius"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardSTContainer">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardSTContainerBottom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="0dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/txtSTSelectDuration"
                                style="@style/BlackSmallCustomMaterialTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_40sdp"
                                android:text="@string/select_your_duration"
                                android:textSize="@dimen/_12sdp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvSTDuration"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:clipToPadding="false"
                                android:orientation="horizontal"
                                android:paddingStart="@dimen/_20sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/txtSTSelectDuration"
                                tools:itemCount="3"
                                tools:listitem="@layout/item_schedule_trip_duration" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/txtRepeatCount"
                                style="@style/BlackSmallCustomMaterialTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:text="@string/repeat"
                                android:visibility="@{visible ? View.GONE : View.VISIBLE}"
                                android:textSize="@dimen/_12sdp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/rvSTDuration" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/txtRepeatDialog"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:text="@string/what_is_this"
                                android:textColor="@color/bg_main"
                                android:textSize="@dimen/_10sdp"
                                android:visibility="@{visible ? View.GONE : View.VISIBLE}"
                                app:layout_constraintBottom_toBottomOf="@id/txtRepeatCount"
                                app:layout_constraintStart_toEndOf="@id/txtRepeatCount"
                                app:layout_constraintTop_toTopOf="@id/txtRepeatCount" />


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/cardCounter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:visibility="@{visible ? View.GONE : View.VISIBLE}"
                                android:background="@drawable/bg_card_black_round"
                                app:layout_constraintBottom_toBottomOf="@id/txtRepeatCount"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@id/txtRepeatCount">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/imgRepeatRemove"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:padding="@dimen/_2sdp"
                                    android:src="@drawable/ic_remove_black"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:ignore="TooDeepLayout" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txtCountRepeat"
                                    style="@style/BlackSmallCustomMaterialTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/_10sdp"
                                    android:textSize="@dimen/_12sdp"
                                    app:layout_constraintBottom_toBottomOf="@id/imgRepeatRemove"
                                    app:layout_constraintEnd_toStartOf="@id/imgRepeatADD"
                                    app:layout_constraintStart_toEndOf="@id/imgRepeatRemove"
                                    app:layout_constraintTop_toTopOf="@id/imgRepeatRemove"
                                    tools:text="@string/_0" />

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/imgRepeatADD"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:src="@drawable/ic_add_black"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnSTConfirm"
                                style="@style/BlackCustomMaterialButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:text="@string/confirm"
                                app:layout_constraintBottom_toTopOf="@id/btnSTCancelTrip"
                                android:visibility="@{visible ? View.VISIBLE : View.GONE}"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/rvSTDuration" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnSTCancelTrip"
                                style="@style/WhiteCustomMaterialButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:text="@string/cancel_trip"
                                android:visibility="@{visible ? View.VISIBLE : View.GONE}"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/btnSTConfirm" />
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnSTScheduleTrip"
                                style="@style/WhiteCustomMaterialButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_20sdp"
                                android:layout_marginVertical="@dimen/_30sdp"
                                android:text="@string/schedule_trip"
                                android:visibility="@{visible ? View.GONE : View.VISIBLE}"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/txtRepeatCount" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>
                </FrameLayout>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgVehicleImage"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_80sdp"
                    bind:image="@{updateTripData.vehicleTypeImage}"
                    bind:placeholder="@{@drawable/kite_red_logo}"
                    android:src="@drawable/ic_tesla_one"
                    app:layout_constraintBottom_toTopOf="@id/frameLayout"
                    app:layout_constraintStart_toEndOf="@id/glStart"
                    app:layout_constraintTop_toTopOf="@id/frameLayout" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>